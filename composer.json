{
  "name": "bitvalencia/laravel-style-rules",
  "description": "Laravel style rules for PHP-CS-Fixer",
  "keywords": [
    "bitvalencia",
    "php style",
    "php",
    "style"
  ],
  "homepage": "https://github.com/bitvalencia/laravel-style-rules",
  "license": "MIT",
  "authors": [
    {
      "name": "Iván García",
      "email": "ivan@bitvalencia.com",
      "homepage": "https://github.com/ivang11",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.2",
    "friendsofphp/php-cs-fixer": "^2.8"
  },
  "autoload": {
    "files": [
      "./src/helpers.php"
    ]
  },
  "scripts": {
      "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
